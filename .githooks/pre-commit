#!/bin/bash
# pre-commit hook for alopex repository
# Runs fmt check, clippy, and optional cross-architecture checks
#
# Setup: git config core.hooksPath .githooks
# Or run: ./scripts/setup-hooks.sh
#
# Environment variables:
#   ALOPEX_CROSS_CHECK=1  - Enable cross-compilation checks (requires toolchain)
#   ALOPEX_SKIP_CLIPPY=1  - Skip clippy (for faster commits)
#
# Cross-compilation requires C cross-compilers:
#   - aarch64-apple-darwin: macOS cross-compiler or osxcross
#   - aarch64-unknown-linux-gnu: aarch64-linux-gnu-gcc

set -e

echo "=== Pre-commit checks ==="

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
CYAN='\033[0;36m'
NC='\033[0m' # No Color

# Check internet connectivity via Discord API
echo -e "${YELLOW}Checking internet connectivity...${NC}"
if ! curl -s --connect-timeout 5 --max-time 10 -o /dev/null -w "%{http_code}" "https://discord.com/api/v10/gateway" | grep -q "^[23]"; then
    echo -e "${RED}Error: インターネットに接続できません${NC}"
    echo -e "${RED}Discord API (https://discord.com/api/v10/gateway) へのアクセスに失敗しました${NC}"
    echo ""
    echo "ネットワーク接続を確認してから再度コミットしてください"
    echo -e "${RED}警告: --no-verify オプションの使用は禁止されています${NC}"
    exit 1
fi
echo -e "${GREEN}Internet connectivity OK${NC}"
echo ""

# Check if we're in the repository root
if [ ! -f "Cargo.toml" ]; then
    echo -e "${RED}Error: Not in repository root${NC}"
    exit 1
fi

echo -e "${YELLOW}Running cargo fmt check...${NC}"
if ! cargo fmt --all -- --check; then
    echo -e "${RED}Format check failed!${NC}"
    echo "Run 'cargo fmt --all' to fix formatting issues"
    exit 1
fi
echo -e "${GREEN}Format check passed${NC}"

if [ "${ALOPEX_SKIP_CLIPPY:-0}" != "1" ]; then
    echo ""
    echo -e "${YELLOW}Running cargo clippy...${NC}"
    if ! cargo clippy --all-targets --all-features -- -D warnings; then
        echo -e "${RED}Clippy check failed!${NC}"
        echo "Fix the warnings above before committing"
        exit 1
    fi
    echo -e "${GREEN}Clippy check passed${NC}"
fi

# Cross-architecture checks (optional, requires full toolchain)
if [ "${ALOPEX_CROSS_CHECK:-0}" = "1" ]; then
    echo ""
    echo -e "${CYAN}Running cross-architecture checks...${NC}"

    CROSS_TARGETS=(
        "aarch64-apple-darwin"
        "x86_64-apple-darwin"
        "aarch64-unknown-linux-gnu"
    )

    installed_targets=$(rustup target list --installed 2>/dev/null || echo "")
    cross_check_failed=0

    for target in "${CROSS_TARGETS[@]}"; do
        if echo "$installed_targets" | grep -q "^${target}$"; then
            echo -e "${YELLOW}  Checking ${target}...${NC}"
            if ! cargo check --target "$target" --all-features 2>&1; then
                echo -e "${RED}  Cross-check failed for ${target}!${NC}"
                cross_check_failed=1
            else
                echo -e "${GREEN}  ${target} OK${NC}"
            fi
        else
            echo -e "${YELLOW}  Skipping ${target} (not installed)${NC}"
        fi
    done

    if [ $cross_check_failed -eq 1 ]; then
        echo -e "${RED}Cross-architecture check failed!${NC}"
        exit 1
    fi
else
    echo ""
    echo -e "${CYAN}Cross-arch checks skipped (set ALOPEX_CROSS_CHECK=1 to enable)${NC}"
fi

echo ""
echo -e "${GREEN}=== All pre-commit checks passed ===${NC}"
